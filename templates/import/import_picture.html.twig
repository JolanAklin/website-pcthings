{% extends 'base.html.twig' %}

{% block title %}
PCThings | Imported picture
{% endblock %}

{% block pageTitle %}
Imported picture
{% endblock %}

{% block bgImage %}
{{ asset("images/page_header/home_image_header.jpg")}}
{% endblock %}
{% block bgImageAff %}
{{ asset("images/page_header/home_image_header.jpg")}}
{% endblock %}

{% block mainText %}
{% for error in errors %}
    <div class="alert alert-danger">{{ error }}</div>
{% endfor %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}

<!-- import form -->
<div class="popup-menu">
    <div id="importPicture">
        {{ form_start(form, { 'attr': {'class': 'editUserForm form-no-max'} }) }}
        {{ form_errors(form) }}
        
        <div>
        {% for child in form.children %}
            {% if child.vars.name != '_token' %}
                <div>
                    {{ form_label(child) }}
                    {{ form_widget(child) }}
                </div>
            {% endif %}
        {% endfor %}
        </div>
        {{ form_end(form) }}
        <button onclick="CloseFilterMenu('importPicture')" class="close-popup-menu"></button>
    </div>
</div>

<!-- image display -->
<button onclick="OpenFilterMenu('importPicture')" style="margin: 5px;">Import</button>
<div class="image-grid">
    <div class="image-grid-row">
        {% for image in images %}
        <div class="image-grid-col">
            <div style="background-image: url('{{ image.getPath }}')"><img src="/images/placeholder.png"></div>
            <p>{{ image.getTitle }} | <a href="/import-picture/modify/{{ image.getId }}">edit</a></p>
        </div>
        {% endfor %}
    </div>
</div>
<button onclick="OpenFilterMenu('importPicture')" style="margin: 5px;">Import</button>

{{ include('template_fragment/_page_navigation.html.twig', {pages: pages, currentPage: currentPage}) }}
{% endblock %}
