{% extends 'base.html.twig' %}

{% block title %}
PCThings | Log in
{% endblock %}

{% block pageTitle %}
Log in!
{% endblock %}

{% block bgImage %}
{{ asset("images/page_header/home_image_header.jpg")}}
{% endblock %}
{% block bgImageAff %}
{{ asset("images/page_header/home_image_header.jpg")}}
{% endblock %}

{% block mainText %}
<form method="post">

    {% if app.user %}
        <div>
            <p>You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a></p>
        </div>
    {% else %}
        <h1>Please sign in</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="h-container h-container-to-vertical">
            <div class="v-container w-xl all-width-when-small-screen">
                <label for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="email" id="inputUsername" class="input" required autofocus>
            </div>
            <div class="v-container w-xl all-width-when-small-screen">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="input" required>
            </div>
        </div>


        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
        #}
            <div class="">
                <!--<label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>-->
                <label class="toggle">Remember me
                    <input type="checkbox" checked="checked" name="_remember_me">
                    <span class="checkmark"></span>
                </label>
            </div>
        

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    {% endif %}


</form>
{% endblock %}