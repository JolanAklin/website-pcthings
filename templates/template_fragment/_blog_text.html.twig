<div class="blog-post" id="{{ blogPost.getId }}">
    <div>
        <div class="blog-post-title">
            {{ blogPost.getTitle}}
        </div>
        <div class="blog-post-content">
            {{ include('template_fragment/text_editor/_json_to_text.html.twig', {'JSON': blogPost.getContent}) }}
        </div>
        <div class="info">
            <div>Category: <a class="link" href={{ path("category_list", {name: blogPost.getCategory.getName}) }}>{{ blogPost.getCategory.getName}}</a></div>
            <div>{{ blogPost.getPublicationDate.getDate|date("d/m/Y") }}</div>
        </div>
        {% if app.user == blogPost.getWriter %}
            <div><a class="button-slicker inverted  m-top-30" href={{ path("user_blog_edit", {blogId: blogPost.getId}) }}>Edit</a></div>
        {% endif %}
    </div>
    
</div>